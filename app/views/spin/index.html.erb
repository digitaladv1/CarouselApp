<% Tracker.all.each do |tlw|%>
<%= tlw.time_last_worn.strftime("%m/%d/%y %H:%M:%S") %>
<br>
<% end %>



<div class= "container text-center">
<div class= "row">
<div class= "col-md-12">

<h1 class= "cTitle"> My Closet </h1>
</div>
</div>

<form class="button_to" action="/mark_worn" >



<div class= "row cCarousel">

<div class="owl-carousel owl-theme">

  <% Photo.all.each do |p| %>
  <% if p.category == "top"%>
  <% if p.image == ""%>
  <div class="cImage_Container">

  <div class="item"><img src="/missing_image.png" width="100%"> </div>
<input class="cChoose_button" type="radio" name="top" value="<%=p.id%>">
</div>
  <% else %>
  <div class="cImage_Container">

    <div class="item"><img src="<%=p.image%>" width="100%"> </div>
<input class="cChoose_button" type="radio" name="top" value="<%=p.id%>">
</div>
    <%end%>
      <%end%>
        <%end%>
</div>

<div class="owl-carousel owl-theme">

  <% Photo.all.each do |p| %>
  <% if p.category == "bottom"%>
  <% if p.image == ""%>
  <div class="cImage_Container">

      <div class="item"><img src="/missing_image.png" width="100%"> </div>
<input class="cChoose_button" type="radio" name="bottom" value="<%=p.id%>">
</div>

  <% else %>
  <div class="cImage_Container">

    <div class="item"><img src="<%=p.image%>" width="100%"> </div>
<input class="cChoose_button" type="radio" name="bottom" value="<%=p.id%>">
</div>
    <%end%>
      <%end%>
        <%end%>
</div>


<div class="owl-carousel owl-theme">

  <% Photo.all.each do |p| %>
  <% if p.category == "footwear"%>
  <% if p.image == ""%>
  <div class="cImage_Container">

    <div class="item"><img src="/missing_image.png" width="100%"> </div>
<input class="cChoose_button" type="radio" name="footwear" value="<%=p.id%>">
</div>


  <% else %>
  <div class="cImage_Container">

    <div class="item"><img src="<%=p.image%>" width="100%"> </div>
<input class="cChoose_button" type="radio" name="footwear" value="<%=p.id%>">
</div>
    <%end%>
      <%end%>
        <%end%>
</div>
      <input type="submit" value="Wear It!">
        </form>
</div>
<script>
$('.owl-carousel').owlCarousel({
    loop:true,
    margin:10,
    nav:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:3
        },
        1000:{
            items:5
        }
    }
})
</script>
</div>
