



<div class= "container text-center">
<div class= "row">
<div class= "col-md-12">

<h1 class= "cTitle"> My Closet </h1>
</div>
</div>

<form class="button_to" action="/mark_worn" >



<div class= "row cCarousel">

<div class="owl-carousel owl-theme">

  <% Photo.all.each do |p| %>
  <% if p.category == "top"%>
  <% d = Tracker.where(:item_id => p.id).order("time_last_worn desc").first %>
  <% if d != nil then
    time_since_worn = distance_of_time_in_words(d.time_last_worn , Time.now)
  else
    time_since_worn = "never worn" end %>
  <% if p.image == ""%>
  <div class="cImage_Container">


  <div class="item">
        <img src="/missing_image.png" width="100%"></div>
    <label class="cChoose_button">
      <input  type="radio" name="top" value="<%=p.id%>">
<img src="/border.png" width="100%" data-toggle="tooltip"  title="<%= time_since_worn %>">

</label>



<label for="top"> <%= time_since_worn %> </label>
</div>
  <% else %>
  <div class="cImage_Container">

    <div class="item"><img src="<%=p.image%>" width="100%">
      <input class="cChoose_button" type="radio" name="top" value="<%=p.id%>"> </div>

<label for="top"> <%= time_since_worn %> </label>
</div>
    <%end%>
      <%end%>
        <%end%>
</div>

<div class="owl-carousel owl-theme">

  <% Photo.all.each do |p| %>
  <% if p.category == "bottom"%>
  <% d = Tracker.where(:item_id => p.id).order("time_last_worn desc").first %>
  <% if d != nil then
    time_since_worn = distance_of_time_in_words(d.time_last_worn , Time.now)
  else
    time_since_worn = "never worn" end %>
  <% if p.image == ""%>
  <div class="cImage_Container">

      <div class="item"><img src="/missing_image.png" width="100%">
        <input class="cChoose_button" type="radio" name="bottom" value="<%=p.id%>"> </div>

<label for="bottom"> <%= time_since_worn %> </label>
</div>

  <% else %>
  <div class="cImage_Container">

    <div class="item"><img src="<%=p.image%>" width="100%"> </div>
<input class="cChoose_button" type="radio" name="bottom" value="<%=p.id%>">
<label for="bottom"> <%= time_since_worn %> </label>
</div>
    <%end%>
      <%end%>
        <%end%>
</div>


<div class="owl-carousel owl-theme">

  <% Photo.all.each do |p| %>
  <% if p.category == "footwear"%>
  <% d = Tracker.where(:item_id => p.id).order("time_last_worn desc").first %>
  <% if d != nil then
    time_since_worn = distance_of_time_in_words(d.time_last_worn , Time.now)
  else
    time_since_worn = "never worn" end %>
  <% if p.image == ""%>
  <div class="cImage_Container">

    <div class="item"><img src="/missing_image.png" width="100%"> </div>
<input class="cChoose_button" type="radio" name="footwear" value="<%=p.id%>">
<label for="footwear"> <%= time_since_worn %> </label>
</div>


  <% else %>
  <div class="cImage_Container">

    <div class="item"><img src="<%=p.image%>" width="100%"> </div>
<input class="cChoose_button" type="radio" name="footwear" value="<%=p.id%>">
<label for="footwear"> <%= time_since_worn %> </label>
</div>
    <%end%>
      <%end%>
        <%end%>
</div>
      <input type="submit" value="Wear It!">
        </form>
</div>
<script>
$('.owl-carousel').owlCarousel({
    loop:true,
    margin:10,
    nav:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:3
        },
        1000:{
            items:5
        }
    }
})
</script>
<script type="text/javascript">
  $(document).ready(function(){
$('[data-toggle="tooltip"]').tooltip();

  });

</script>
</div>
